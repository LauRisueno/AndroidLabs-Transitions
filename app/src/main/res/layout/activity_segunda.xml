<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.marcelo.tilapp.SegundaActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:elevation="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="siguiente"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/img1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textColor="#f5f5f5"
                        android:gravity="center"
                        android:text="Toolbar"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:onClick="siguiente2"
                android:elevation="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/img2"/>

                    <TextView
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textColor="#f5f5f5"
                        android:gravity="center"
                        android:text="Tab Layout"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:onClick="siguiente3"
                android:elevation="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/img3"/>

                    <TextView
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textColor="#f5f5f5"
                        android:gravity="center"
                        android:text="NavigationDrawer"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:elevation="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="siguiente4"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imagen_compartida"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:transitionName="shared_image"
                        android:src="@drawable/img4"/>

                    <TextView
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textColor="#f5f5f5"
                        android:gravity="center"
                        android:text="RecyclerView"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:elevation="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="siguiente5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imagen_compartida2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:transitionName="shared_image"
                        android:src="@drawable/img5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textColor="#f5f5f5"
                        android:gravity="center"
                        android:text="Transitions"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:elevation="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="siguiente6"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imagen_compartida3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:transitionName="shared_image"
                        android:src="@drawable/img6"/>

                    <TextView
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textColor="#f5f5f5"
                        android:gravity="center"
                        android:text="FAB"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
